<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base text style -->
    <style name="Text">
        <item name="android:textColor">@color/md_grey900</item>
    </style>

    <!-- Custom text styles -->
    <style name="Text.Subheading.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Subheading.Italic">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Text.Headline.BoldItalic">
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="Text.Headline.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Material text styles -->
    <style name="Text.Headline">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.Subheading">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Body2">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Body1">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>